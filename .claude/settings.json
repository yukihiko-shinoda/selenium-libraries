{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run invoke lint"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(uv run invoke lint:*)",
      "Bash(sudo -u selenium uv run pytest:*)",
      "Bash(sudo -u selenium uv run invoke test:*)"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(rm:*)",
      "Read(.env.*)"
    ]
  }
}
